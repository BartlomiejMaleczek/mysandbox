<aura:component description="ConfirmationDialogModalWindow">
    <aura:attribute name="isConfirmationDialogModalWindowOpened" type="Boolean"/>

    <aura:registerEvent name="submitConfirmationEvt" type="c:SubmitConfirmationEvt"/>

    <div class="demo-only" style="height: 320px; width: 200px">
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.handleCloseDialogWindow}">
                        X<span class="slds-assistive-text">Cancel</span>
                    </button>
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Confirmation Dialog</h2>
                </header>
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                   <span class="slds-align_absolute-center slds-text-heading_medium">
                        <p>Are you sure you want to finish?</p>
                    </span>
                </div>
                <footer class="slds-modal__footer">
                    <span class="slds-align_absolute-center">
                        <lightning:buttonGroup >
                                <lightning:button variant="neutral" label="No" onclick="{!c.handleCloseDialogWindow}"/>
                                <lightning:button variant="brand" label="Yes" onclick="{!c.handleConfirmed}"/>
                            </lightning:buttonGroup>
                    </span>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </div>
</aura:component>