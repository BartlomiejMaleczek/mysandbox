<apex:page standardController="Product2" extensions="Product2Extension" lightningStylesheets="true">
    <apex:sectionHeader title="New Product" subtitle="Add Inventory" />
    <apex:pageMessages id="pageMessages" />
    <p>DUPA</p>
    <apex:form id="form" >
        <apex:actionRegion >
            <apex:pageBlock title="Existing Inventory" >
                Chart goes here
            </apex:pageBlock>
            <apex:pageBlock title="New Products" >
                <apex:pageBlockButtons location="top">
                    <apex:commandButton action="{!save}" value="Save" />
                </apex:pageBlockButtons>
                <apex:pageBlockButtons location="bottom">
                    <apex:commandButton action="{!addRows}" value="Add" />
                </apex:pageBlockButtons>

                <apex:pageBlockTable value="{!productWrappers}" var="p" id="orderItemTable" >
                    <apex:column headerValue="{!productsFieldsLabelsMap['name']}">
                        <apex:inputText value="{!p.productRecord.Name}" />
                    </apex:column>
                    <apex:column headerValue="{!productsFieldsLabelsMap['family']}" >
                        <apex:selectList value="{!p.productRecord.Family}" size="1" multiselect="false" >
                            <apex:selectOptions value="{!familyOptions}"/>
                        </apex:selectList>
                    </apex:column>
                    <apex:column headerValue="{!productsFieldsLabelsMap['isactive']}" >
                        <apex:inputField value="{!p.productRecord.isActive}" />
                    </apex:column>
                    <apex:column headerValue="{!pricebookEntriesFieldsLabelsMap['unitprice']}" >
                        <apex:inputField required="false" value="{!p.pricebookEntryRecord.UnitPrice}" />
                    </apex:column>
                    <apex:column headerValue="{!productsFieldsLabelsMap['initial_inventory__c']}" >
                        <apex:inputField value="{!p.productRecord.Initial_Inventory__c}" />
                    </apex:column>
                </apex:pageBlockTable>
            </apex:pageBlock>
        </apex:actionRegion>
    </apex:form>
</apex:page>