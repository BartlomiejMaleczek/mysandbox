<aura:component description="InputLookupResultLine">
    <aura:attribute name="recordLineIconName" type="String"/>
    <aura:attribute name="record" type="Object" required="true"/>
    <aura:attribute name="mainFieldToDisplay" type="Map" required="true" access="public"/>
    <aura:attribute name="mainFieldValueToDisplay" type="String"/>
    <aura:attribute name="additionalFieldsToDisplay" type="Object[]" required="true" access="public"/>
    <aura:attribute name="additionalFieldsCmp" type="Aura.Component[]" access="private"/>

    <aura:handler name="init" value="{!this}" action="{!c.handleInit}"/>

    <c:UtilsComponent aura:id="UtilsService"/>
    <c:InputLookupEvtHandler aura:id="InputLookupEvtHandler"/>

    <li role="presentation" class="slds-listbox__item" onclick="{!c.handleSelectRecord}">
        <div id="option1"
             class="slds-media slds-listbox__option slds-listbox__option_entity slds-listbox__option_has-meta"
             role="option">
                  <span class="slds-media__figure slds-listbox__option-icon">
                        <lightning:icon iconName="{!v.recordLineIconName}" size="medium"/>
                  </span>
                <span class="slds-media__body">
                    <span class="slds-listbox__option-text slds-listbox__option-text_entity">{!v.mainFieldValueToDisplay}</span>
                        {!v.additionalFieldsCmp}
                </span>
        </div>
    </li>
</aura:component>